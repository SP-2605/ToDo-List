    <h1><%=ListTitle%></h1>
</div>

<div class="box">

    <% ListItems.forEach(function(item){ %>
    <form action="/delete" method="POST">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
            <p><%= item.name %></p>
            <input type="hidden" name="hiddenInput" value="<%= ListTitle %>">
        </div>
    </form>
    <% }) %>

